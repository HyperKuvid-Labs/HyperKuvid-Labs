generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String          @id @default(uuid())
  name            String
  email           String          @unique
  password        String
  level           UserLevel       @default(GENERAL)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  lastSeen        DateTime
  builderProfile  BuilderProfile?
  projects        Project[]       @relation("UserProjects")
  createdProjects UserProject[]
}

model BuilderProfile {
  id             String           @id @default(uuid())
  userId         String           @unique
  bio            String?
  skills         String[]
  linkedin       String?          @unique
  x              String?          @unique
  githubUsername String?          @unique
  hasPortfolio   Boolean          @default(false)
  portfolioSite  String?
  profileImage   String?
  mail           String?          @unique
  user           User             @relation(fields: [userId], references: [id])
  builtProjects  BuilderProject[] @relation("BuilderProfileToBuilderProject")
}

model Project {
  id            String          @id @default(uuid())
  title         String          @unique
  description   String
  githubLink    String?
  story         String?
  documentation String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  ownerId       String
  status        ProjectStatus   @default(Waiting)
  techstack     String[]
  builders      BuilderProject?
  owner         User            @relation("UserProjects", fields: [ownerId], references: [id])
  creators      UserProject[]
}

model UserProject {
  id        String   @id @default(uuid())
  userId    String
  projectId String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, projectId])
}

model BuilderProject {
  id         String           @id @default(uuid())
  projectId  String           @unique
  githubLink String?
  addedAt    DateTime         @default(now())
  project    Project          @relation(fields: [projectId], references: [id])
  builder    BuilderProfile[] @relation("BuilderProfileToBuilderProject")
}

enum UserLevel {
  ADMIN
  GENERAL
  CORE_GENERAL
}

enum ProjectStatus {
  Waiting
  Aproved
}
